@model List<RelationshipTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-striped table-bordered table-hover mt-5">
    <thead class="table-primary">
        <tr>
            <th scope="col">
                Class
            </th>
            <th scope="col">
                Course
            </th >
            <th scope="col">
                Student
            </th>
            <th scope="col">
                Teacher
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Classes.ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Courses.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Students.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teachers.FirstName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
